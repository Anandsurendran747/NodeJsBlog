<section>
      
  <div class="container">
    <button id="addImg" onclick="addImg()">Add Image/Video</button>
    <button id="addImg" onclick="addHeader()">Add Header</button>
    <button id="addImg" onclick="addSubHeader()">Add Sub Header</button>
    <button id="addImg" onclick="addParagraph()">Add Paragraph</button>
    {{!-- <button id="addImg" onclick="addFooterParagraph()">Add footer Paragrapg</button> --}}
    <button id="addImg" onclick="addCode()">Add Code</button>
    {{!-- <button id="addImg" onclick="addSession()">Add Session</button> --}}
    <div style="width: 100%;height: fit-content;margin-top: 10vh;border:1px solid black;">
      <form action="/admin/editBlog/{{blog._id}}"  method="POST" enctype="multipart/form-data">
        <div id="form"  >
          
          <div style="width: 100%;text-align: center;margin-bottom: 3vh;margin-top: 2vh;">
            <label for="">Blog title:</label>
            <input value="{{blog.title}}" name="title" type="text" /><br />
          </div>
          <div style="margin-bottom: 2vh;margin-left: 5%;">
            <label for="" style="">description</label><br>
            <input value="{{blog.description}}" name="description" style="width: 95%;" type="text" /><br />
          </div>
          <div style="width: 100%;height: fit-content;margin-top: 1vh;margin-left: 5%;"> 
            {{#each blog.steps}}
                {{#if this.0.header}}
                    <div><input placeholder="Header" style="height: 50px;width: 30vw;" name={{append "headeredit"@index}} value="{{this.0.header}}" type="text"><a class='remove_upperparagraph'>Remove</a></div><br>
                {{/if}}
                {{#if this.0.subheader}}
                    <div><input placeholder="Sub Header" style="height: 30px;width: 50vw;" name={{append "subheaderedit"@index}} value="{{this.0.subheader}}" type="text"><a class='remove_upperparagraph'>Remove</a></div><br>
                {{/if}}
                {{#if this.0.paragraph}}
                  <div><textarea placeholder="Paragraph" style="width: 80%;" name={{append "paragraphedit"@index}} id="" cols="30" rows="10">{{this.0.paragraph}}</textarea><a class='remove_upperparagraph'>Remove</a></div><br>
                {{/if}}
                {{#if this.0.image}}
                  <div><input style="height: 40px;width: 60vw;" placeholder="Image Url" name={{append "imageedit"@index}} value="{{this.0.image}}" type="text"><a class='remove_upperparagraph'>Remove</a></div><br>
                {{/if}}
                {{#if this.0.code}}
                  <div><textarea  placeholder="Code" style="width: 80%;" name={{append "codeedit"@index}} id="" cols="30" rows="10">{{this.0.code}}</textarea><a class='remove_upperparagraph'>Remove</a> </div><br>
                {{/if}}
                
        {{/each}}
          </div>
        </div>
        
        <div class="submit" style="text-align: center;margin-top: 3vh;margin-bottom: 2vh;">
          <button  type="submit">Submit</button>
        </div>
      </form>
    </div>

  </div>
  

</section>
